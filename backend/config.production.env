# Production Environment Variables for Render Deployment

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/student_erp?retryWrites=true&w=majority

# Server Configuration
PORT=10000
NODE_ENV=production

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_for_production_change_this
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_for_production_change_this
JWT_REFRESH_EXPIRE=30d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
GOOGLE_CLIENT_ID=your_google_client_id

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# CORS - Add your Vercel frontend URL here
CORS_ORIGIN=https://your-app-name.vercel.app

# Frontend URL
FRONTEND_URL=https://your-app-name.vercel.app

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# WhatsApp Configuration
WHATSAPP_API_URL=https://api.whatsapp.com/send
WHATSAPP_PHONE_NUMBER=+1234567890
